<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Add Email">
        <content>
            <VBox>
                <Label text="Email Address"/>
                <Input id="emailAddressInput"/>
                <Label text="Type"/>
                <Input id="emailTypeInput"/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Post" press="onPostEmail"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelEmail"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>