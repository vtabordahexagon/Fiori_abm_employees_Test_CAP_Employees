<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Editar Empleado">
        <content>
            <VBox>
                <Label text="First Name"/>
                <Input value="{oEmployeesData>firstName}"/>
                <Label text="Last Name"/>
                <Input value="{oEmployeesData>lastName}"/>
                <Label text="Hire Date"/>
                <DatePicker value="{oEmployeesData>hireDate}"/>
                <Label text="Position"/>
                <Input value="{oEmployeesData>position}"/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Guardar" press="onSaveChangesPress"/>
        </beginButton>
        <endButton>
            <Button text="Cancelar" press="onCancelChangesPress"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>