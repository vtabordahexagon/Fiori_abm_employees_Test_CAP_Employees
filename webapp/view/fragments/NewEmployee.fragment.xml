<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Nuevo Empleado">
        <content>
            <VBox>
                <Label text="First Name"/>
                <Input id="newFirstName"/>
                <Label text="Last Name"/>
                <Input id="newLastName"/>
                <Label text="Birth Date"/>
                <DatePicker id="newBirthDate"/>
                <Label text="Hire Date"/>
                <DatePicker id="newHireDate"/>
                <Label text="Position"/>
                <Input id="newPosition"/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Post" press="onPostNewEmployee"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelNewEmployee"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>